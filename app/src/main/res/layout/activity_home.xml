        android:text="F2" />

    <Button
        android:id="@+id/bu3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bu1"
        android:layout_marginEnd="16dp"
